<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/purple_700"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_Mechanic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_avatar"
            android:layout_margin="15dp"
            android:contentDescription="mechanic_image"/>

        <TextView
            android:id="@+id/txt_mechanic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanic Name"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_Mechanic"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_below="@+id/txt_mechanic_name"
            android:layout_toRightOf="@+id/img_Mechanic"
            />

        <TextView
            android:id="@+id/txt_mechanic_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanic Email"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/img_email"
            android:layout_below="@+id/txt_mechanic_name"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_phone_android_24"
            android:layout_toRightOf="@id/img_Mechanic"
            android:layout_below="@+id/img_email"/>

        <TextView
            android:id="@+id/txt_mechanic_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanic Phone"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/img_phone"
            android:layout_below="@+id/txt_mechanic_email"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/img_rupees"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_currency_rupee_24"
            android:layout_toRightOf="@+id/img_Mechanic"
            android:layout_below="@+id/img_phone"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txt_mechanic_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanic Charge"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_rupees"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/txt_mechanic_phone"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/txt_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year of Experiences :"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/img_Mechanic"
            />

        <TextView
            android:id="@+id/txt_mechanic_expYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/img_Mechanic"
            android:layout_toRightOf="@+id/txt_experience"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expertise In :"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_experience"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_mechanic_expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Wheelers"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/txt_experience"
            android:layout_toRightOf="@+id/txt_expertise"/>

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/txt_expertise"/>

        <TextView
            android:id="@+id/txt_mechanic_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pune, Maharashtra"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_below="@+id/txt_expertise"
            android:layout_toRightOf="@+id/txt_address"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"/>




       <Button
           android:id="@+id/btn_serviceRequest"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Request Service ->"
           android:textSize="18sp"
           android:textStyle="bold"
           android:textColor="@color/purple_700"
           android:backgroundTint="#ffffff"
           android:padding="10dp"
           android:background="@drawable/border"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="10dp"
           android:textAllCaps="false"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>