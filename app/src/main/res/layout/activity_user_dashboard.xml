<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#000000"
    tools:context=".UserDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<!-- ===================  TOOLBAR SECTION START HERE ===========================   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>


    <!-- ===================  TOOLBAR SECTION END HERE ===========================   -->



    <!-- ===================  IMAGE SLIDER SECTION START HERE ===========================   -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="1000"
                    app:iss_period="1000"
                    app:iss_title_background="@drawable/gradient" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- ===================  IMAGE SLIDER SECTION END HERE ===========================   -->



    <!-- ===============  USER MECHANIC SERVICE VEHICLE SECTION START HERE ===============   -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLayout_services"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#2d2d2d"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mechanic"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Services"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:letterSpacing=".1"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLayout_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#2d2d2d"
            app:cardCornerRadius="15dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/person"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:letterSpacing=".1"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLayout_vehicles"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#2d2d2d"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/vehicle"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Vehicles"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:letterSpacing=".1"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLayout_mechanics"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="15dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#2d2d2d"
            app:cardCornerRadius="15dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/car_repair"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Mechanic"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:letterSpacing=".1"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>

<!-- ========================= USER MECHANIC SERVICE VEHICLE SECTION END HERE =================== -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="1000"
                    app:iss_period="1000"
                    app:iss_title_background="@drawable/gradient" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgWhatsUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/whatsapp"/>

            <ImageView
                android:id="@+id/imgLinkedIn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/linkedin"/>

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/facebook"/>

            <ImageView
                android:id="@+id/imgInstagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/instagram"/>


        </LinearLayout>



    </RelativeLayout>

    </LinearLayout>

</ScrollView>