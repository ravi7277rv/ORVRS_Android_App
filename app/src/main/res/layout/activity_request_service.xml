<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    tools:context=".RequestService">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            android:elevation="15dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#251414">

            <TextView
                android:id="@+id/txtUserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Details"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txt_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtUserDetails"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txt_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ravikishansingh7277@gmail.com"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/txtUserDetails"
                android:layout_toRightOf="@+id/txt_Email"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:id="@+id/txt_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/txt_user_email"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txt_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8968957848"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:layout_below="@id/txt_user_email"
                android:layout_toRightOf="@id/txt_Phone"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            android:elevation="15dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#251414">

            <TextView
                android:id="@+id/txtMechanicDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic Details"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txt_Mec_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtMechanicDetails"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txt_mec_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ravikishansingh7277@gmail.com"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/txtMechanicDetails"
                android:layout_toRightOf="@+id/txt_Mec_Email"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/txt_Mec_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_below="@+id/txt_Mec_Email"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txt_mec_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8968957848"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:layout_below="@id/txt_mec_email"
                android:layout_toRightOf="@id/txt_Mec_Phone"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            android:elevation="15dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#251414">


                <TextView
                    android:id="@+id/txt_Ser_Req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Request"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/txt_Problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problem :"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_Ser_Req"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/edi_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Problem"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="25dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:lines="6"
                    android:hint="Enter your problem"
                    android:gravity="top"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollHorizontally="false"/>


                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/edi_problem"
                    android:layout_marginStart="20dp"/>



                <EditText
                    android:id="@+id/edi_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_location"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:lines="3"
                    android:hint="Enter your location"
                    android:gravity="top"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollHorizontally="false"/>


                <Button
                    android:id="@+id/btn_submit_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Request"
                    android:layout_below="@+id/edi_location"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>



</ScrollView>