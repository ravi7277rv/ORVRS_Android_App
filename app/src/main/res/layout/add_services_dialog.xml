<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:background="#C86802"
    android:orientation="vertical"
    android:layout_height="480dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Services Here..."
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/ediTxtServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#9A5103"
        android:hint="Enter Service Name"
        android:inputType="text"
        android:textSize="18sp"
        android:textColorHint="#C86802"
        android:layout_margin="15dp"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/ediTxtServicePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#C86802"
        android:hint="Enter Service Price"
        android:inputType="number"
        android:textSize="18sp"
        android:textColorHint="#C86802"
        android:layout_margin="15dp"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/ediTxtServiceDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#C86802"
        android:hint="Enter Service Description"
        android:textSize="18sp"
        android:textColorHint="#C86802"
        android:layout_margin="15dp"
        android:gravity="top"
        android:lines="5"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollHorizontally="false"/>


    <EditText
        android:id="@+id/ediTxtServicePurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#C86802"
        android:hint="Enter Service Image Url"
        android:textSize="18sp"
        android:textColorHint="#C86802"
        android:layout_margin="15dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnAddServ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Service"
        android:textColor="#C86802"
        android:textAllCaps="false"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center"
        android:textSize="25sp"/>



</LinearLayout>