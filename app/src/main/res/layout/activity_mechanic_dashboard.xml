<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".MechanicDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/border_mechanic"
        android:layout_marginTop="-140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="140dp">

            <!-- ===================  TOOLBAR SECTION START HERE ===========================   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/mechanicToolBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0371A3">

                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.AppBarLayout>

            </LinearLayout>
            <!-- ===================  TOOLBAR SECTION END HERE ===========================   -->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#00FFF7"
                android:layout_gravity="center"
                android:text="Welcome"/>

            <TextView
                android:id="@+id/txtMecName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#00CBFF"
                android:layout_gravity="center"
                android:text="Kumar Abhishek Singh"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMecProfile"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="40dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg9">

                    <ImageView
                        android:id="@+id/imgMecProImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/person"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mechanic Profile"
                        android:textColor="#03ADBC"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imgMecProImage"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMecServices"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="40dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg3">


                <ImageView
                    android:id="@+id/imgAllService"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/servicesbgrem"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All The Services"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imgAllService"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold|italic"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMecServReq"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="40dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg5">

                    <ImageView
                        android:id="@+id/imgAllSerReq"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:src="@drawable/servicesbgrem"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txtViewSerReq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Service"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/imgAllSerReq"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold|italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold|italic"
                        android:layout_below="@+id/txtViewSerReq"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</ScrollView>